{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "es6", "es7"],
    "rootDir": "src",
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules"]
}
